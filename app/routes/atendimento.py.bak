# --- Intent detection simples e priorizado ---
import re as _re
_RE_NUM_PROC = _re.compile(r'\d{7}-\d{2}\.\d{4}\.\d\.\d{2}\.\d{4}')

def detect_intent(texto):
    t = (texto or "").lower().strip()

    # 1) Consulta de andamento (prioridade alta)
    if ("andamento" in t or "novidade" in t or "como est√°" in t or "como esta" in t) and "processo" in t:
        return "consulta_andamento_cliente"
    if _RE_NUM_PROC.search(t):
        return "consulta_andamento_cliente"

    # 2) Agendar consulta
    if any(k in t for k in ["agendar", "consulta", "hor√°rio", "horario", "reuni√£o", "reuniao", "agenda", "sexta", "semana que vem"]):
        return "agendar_consulta_cliente"

    # 3) Enviar documento
    if any(k in t for k in ["rg", "cnh", "comprovante", "documento", "anexo", "pdf", "foto", "imagem"]):
        return "enviar_documento_cliente"

    # 4) Relato de caso (padr√£o)
    if any(k in t for k in ["demitid", "pens√£o", "pensao", "d√≠vida", "divida", "juros", "banco", "indeniza", "direito"]):
        return "relato_caso"

    return "fluxo_nao_detectado"


